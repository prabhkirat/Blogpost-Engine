@model IEnumerable<Assignment2.Models.User>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_Layout";
    ViewBag.Title = "Blog Login";
}

<div class="container">
    <form asp-controller="Home" asp-action="VerifyUser" method="post">
        <div>
            <div class="form-group col-sm-8">
                <label for="email">Email: </label>
                <input type="email" class="form-control" name="EmailAddress" placeholder="Email" required /><br />
            </div>
            <div class="form-group col-sm-8">
                <label for="password">Password: </label>
                <input type="password" class="form-control" name="Password" placeholder="Password" required /><br />
            </div>
        </div>
        <div class="col-sm-8">
            <button type="submit" class="btn btn-large btn-success">Log In</button>
        </div>

    </form>
</div>
